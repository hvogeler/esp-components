menu "WiFi Configuration"

    config HV_WIFI_TIMEZONE
        string "Timezone"
        default "CET-1CEST,M3.5.0,M10.5.0/3"
        help
            POSIX timezone string for time synchronization

    config HV_WIFI_TIME_SERVER_0
        string "Primary NTP Server"
        default "0.de.pool.ntp.org"
        help
            Primary NTP time server

    config HV_WIFI_TIME_SERVER_1
        string "Secondary NTP Server"
        default "1.de.pool.ntp.org"
        help
            Secondary NTP time server

    config HV_WIFI_MAX_RETRY
        int "Maximum connection retries"
        default 5
        range 1 20
        help
            Maximum number of WiFi connection retry attempts

endmenu
